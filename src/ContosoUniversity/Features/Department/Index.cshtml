@using ContosoUniversity.Features.Department
@model IList<IndexModel>
@{
    ViewBag.Title = "Departments";
}
<h2>Departments</h2>
<p>
    @(Html.Link<UiController>(c => c.Create(), "Create New"))
</p>
<table class="table">
    <tr>
        <th>
            @(Html.DisplayNameFor(model => model.Name))
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            Administrator
        </th>
        <th></th>
    </tr>
    @{ int i = 0; }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Display(modelItem => modelItem[i].Name)
            </td>
            <td>
                @Html.Display(modelItem => modelItem[i].Budget)
            </td>
            <td>
                @Html.Display(modelItem => modelItem[i].StartDate)
            </td>
            <td>
                @Html.Display(modelItem => modelItem[i].AdministratorFullName)
            </td>
            <td>
                @(Html.Link<UiController>(c => c.Edit(item.DepartmentID), "Edit")) |
                @(Html.Link<UiController>(c => c.Details(item.DepartmentID), "Details")) |
                @(Html.Link<UiController>(c => c.Delete(item.DepartmentID, null), "Delete"))
            </td>
        </tr>
        i++;
    }
</table>